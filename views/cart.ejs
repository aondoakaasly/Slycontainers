<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/niyu.css">
        <!-- Boxicons -->
        <link
        href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css"
        rel="stylesheet"
      />
      <!-- Glide js -->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.4.1/css/glide.core.css">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.4.1/css/glide.theme.css">
      <!-- Custom StyleSheet -->
      <title>Latoyaandstyles</title>
      <link rel="icon" href="/images/first.jpeg">
    <title>Your Cart</title>

    <style>
    .popup-modal {
    display: none; /* Hidden by default */
    position: fixed; 
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1000;
}

.popup-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: #fff;
    padding: 20px;
    border-radius: 8px;
    width: 300px;
    height: 70px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    text-align: center;
}

.popup-content .close-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    cursor: pointer;
    font-size: 20px;
}

.popup-content button {
    margin: 10px;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

.popup-content .confirm-btn {
    background-color: #28a745;
    color: #fff;
}

.popup-content .cancel-btn {
    background-color: #dc3545;
    color: #fff;
}

    </style>
</head>
<body>
    <!-- Navigation (same as before) -->

    <div class="navigation">
      <div class="nav-center container d-flex">
        <!-- <a href="/" class="logo"><h1>LyContainers</h1></a> -->

        <ul class="nav-list d-flex">
          <li class="nav-item">
            <a href="/home" class="nav-link">Container for Home</a>
          </li>
          <li class="nav-item">
            <a href="/shop" class="nav-link">Container for Shop</a>
          </li>
          <li class="nav-item">
            <a href="/event" class="nav-link">Container for Event</a>
          </li>
          <li class="nav-item">
            <a href="/both" class="nav-link">Containers</a>
          </li>
          <li class="nav-item">
            <a href="/about" class="nav-link">About</a>
          </li>
          <li class="nav-item">
            <a href="/contact" class="nav-link">Contact</a>
          </li>
         
          <li class="icons d-flex">
           
            <a href="/cart" class="icon">
              <i class="bx bx-cart"></i>
              <span class="d-flex"><%= cartItemCount %> </span>
            </a>
          </li>
        </ul>

        <div class="icons d-flex">
         
          <a href="/cart" class="icon">
            <i class="bx bx-cart"></i>
            <span class="d-flex"><%=  cartItemCount %> </span>
          </a>
        </div>

        <div class="hamburger">
          <i class="bx bx-menu-alt-left"></i>
        </div>
      </div>
    </div>

    <div class="container cart">
      <table>
          <tr>
              <th>Product</th>
              <th>Quantity</th>
              <th>Subtotal</th>
              <th>Action</th> <!-- Added column for action -->
          </tr>
          <% cart.forEach(item => { %>
              <tr>
                  <td>
                      <div class="cart-info">
                          <img src="<%= item.image %>" alt="<%= item.name %>">
                          <div>
                              <p><%= item.name %></p>
                              <span>Price: $<%= item.price.toFixed(2) %></span> <br />
                              <!-- Removed the 'remove' link here, we'll use a form instead -->
                          </div>
                      </div>
                  </td>
                  <td><input type="text" value="<%= item.quantity %>" max="<%= item.quantity %>" ></td>
                  <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
                  <td>
                      <!-- Form to remove item from cart -->
                      <form action="/cart/remove" method="POST" style="display:inline;">
                          <input type="hidden" name="productId" value="<%= item.productId %>">
                          <button type="submit" class="remove-btn">Remove</button>
                      </form>
                  </td>
              </tr>
          <% }) %>
      </table>
      <div class="total-price">
          <table>
              <tr>
                  <td>Subtotal</td>
                  <td>$<%= total.toFixed(2) %></td>
              </tr>
              <!-- Add tax and total calculation as needed -->
          </table>
          <button  class="checkout btn" id="checkoutBtn"> Checkout</button>
      </div>
  </div>



  <!-- Popup Modal -->
<div id="popupModal" class="popup-modal">
  <div class="popup-content">
      <span class="close-btn">&times;</span>
      <h2>Checkout Confirmation</h2>
      <p>Send Us a Message via email or Whatsapp</p> <br>
      <p>+1(405)862-9760</p> 
      <p>vibrvester@gmail.com</p>
      
  </div>
</div>


<script>

document.addEventListener('DOMContentLoaded', () => {
    const checkoutBtn = document.getElementById('checkoutBtn');
    const popupModal = document.getElementById('popupModal');
    const closeBtn = popupModal.querySelector('.close-btn');
    const cancelBtn = popupModal.querySelector('.cancel-btn');

    // Show the modal
    checkoutBtn.addEventListener('click', () => {
        popupModal.style.display = 'block';
    });

    // Hide the modal on close button click
    closeBtn.addEventListener('click', () => {
        popupModal.style.display = 'none';
    });

    // Hide the modal on cancel button click
    cancelBtn.addEventListener('click', () => {
        popupModal.style.display = 'none';
    });

    // Close the modal if user clicks outside of it
    window.addEventListener('click', (event) => {
        if (event.target === popupModal) {
            popupModal.style.display = 'none';
        }
    });
});

</script>

    <!-- Footer (same as before) -->
    <script src="/js/slider.js"></script>
    <script src="/js/index.js"></script>
</body>
</html>